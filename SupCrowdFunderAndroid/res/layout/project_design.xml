<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants" >

           <ImageView
                android:id="@+id/ivProjectImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:contentDescription="@string/emptydesc"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvProjectDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" 
                android:focusable="false"
                android:layout_below="@+id/ivProjectImg"
                android:ems="10" >
            </TextView>

            <TextView
                android:id="@+id/tvProjectTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/tvProjectDescription"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:text="@string/projecttitle" />
            
           <TextView
                android:id="@+id/tvProjectPercentage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:focusable="false"
                android:layout_below="@+id/tvProjectDescription"
                android:ems="10" >
            </TextView>
</RelativeLayout>